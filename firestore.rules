rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if false; // Never allow user deletion from client
    }

    // Friendships collection
    match /friendships/{friendshipId} {
      allow read: if request.auth != null && (
        resource.data.user1Id == request.auth.uid ||
        resource.data.user2Id == request.auth.uid
      );

      allow create: if request.auth != null && (
        request.resource.data.user1Id == request.auth.uid ||
        request.resource.data.user2Id == request.auth.uid
      );

      allow update: if request.auth != null && (
        resource.data.user1Id == request.auth.uid ||
        resource.data.user2Id == request.auth.uid
      );

      allow delete: if request.auth != null && (
        resource.data.user1Id == request.auth.uid ||
        resource.data.user2Id == request.auth.uid
      );
    }

    // Groups collection
    match /groups/{groupId} {
      allow read: if request.auth != null &&
                    request.auth.uid in resource.data.members;
      allow create: if request.auth != null &&
                      request.resource.data.creatorId == request.auth.uid;
      allow update: if request.auth != null &&
                      request.auth.uid in resource.data.members;
      allow delete: if request.auth != null &&
                      resource.data.creatorId == request.auth.uid;
    }

    // Bets collection
    match /bets/{betId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null &&
                      request.resource.data.creatorId == request.auth.uid;
      allow update: if request.auth != null && (
        // Creator can update bet
        resource.data.creatorId == request.auth.uid ||
        // Participants can add their picks
        request.auth.uid in resource.data.participants
      );
      allow delete: if request.auth != null &&
                      resource.data.creatorId == request.auth.uid;
    }

    // Group members collection
    match /groupMembers/{memberId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Tournaments collection
    match /tournaments/{tournamentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null &&
                      request.resource.data.directorId == request.auth.uid;
      allow update: if request.auth != null &&
                      resource.data.directorId == request.auth.uid;
      allow delete: if request.auth != null &&
                      resource.data.directorId == request.auth.uid;
    }

    // Activities collection
    match /activities/{activityId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if false; // Activities are immutable
      allow delete: if false; // Activities should not be deleted from client
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if request.auth != null &&
                    resource.data.userId == request.auth.uid;

      // Users can update their own notifications (mark as read)
      allow update: if request.auth != null &&
                      resource.data.userId == request.auth.uid &&
                      request.resource.data.diff(resource.data).affectedKeys()
                        .hasOnly(['isRead']);

      // Only server/Cloud Functions can create notifications
      allow create: if false;
      allow delete: if false;
    }

    // Leaderboards collection
    match /leaderboards/{leaderboardId} {
      allow read: if request.auth != null;
      allow create: if false; // Only created via Cloud Functions
      allow update: if false; // Only updated via Cloud Functions
      allow delete: if false;
    }
  }
}
